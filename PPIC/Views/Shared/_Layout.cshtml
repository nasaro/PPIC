<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <title>@ViewBag.Title - PPIC Application</title>
    @* ---@Styles.Render("~/Content/css" ) --*@

    @*@Styles.Render("~/Content/css")*@
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/bootstrap.css">
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/Css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/Css/ionicons.min.css">
    <link rel="stylesheet" href="~/Content/Css/dataTables.bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/Css/AdminLTE.min.css">
    <link rel="stylesheet" href="~/Content/Css/_all-skins.min.css">
    <link rel="stylesheet" href="~/Scripts/adminlte/plugins/iCheck/square/blue.css">
    <link rel="stylesheet" href="~/Scripts/adminlte/components/fullcalendar/dist/fullcalendar.min.css">
    <link rel="stylesheet" href="~/Scripts/adminlte/components/fullcalendar/dist/fullcalendar.print.min.css" media="print">
    <link rel="stylesheet" href="~/Content/Css/jquery-jvectormap.css">
    <link rel="stylesheet" href="~/Content/Css/bootstrap-timepicker.min.css">
    <link rel="stylesheet" href="~/Content/Css/bootstrap-datepicker.min.css">
    <link rel="stylesheet" href="~/Content/Css/bootstrap3-wysihtml5.min.css">
    <link rel="stylesheet" href="~/Content/Css/bootstrap-slider.css">


    <style>
        tbody tr {
            cursor: pointer;
        }

        .table-hover tbody tr:hover td {
            background: #b3b3ff;
        }

        .table-striped > tbody > tr:nth-child(odd) > td,
        .table-striped > tbody > tr:nth-child(odd) > th {
            background-color: #ccff99;
        }


        th {
            font-size: 16px;
        }

        td {
            font-size: 14px;
        }
    </style>



    <!-- Google Font  -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">

    @*@if (IsSectionDefined("Styles"))
        {@RenderSection("Styles", required: false)}*@

</head>
<body class="hold-transition skin-blue sidebar-mini">

    <div class="wrapper">

        @Html.Partial("_Header")

        @Html.Partial("_Sidebar")

        @RenderBody()

        @Html.Partial("_Footer")

        @Html.Partial("_Aside")
        <!-- Add the sidebar's background. This div must be placed
        immediately after the control sidebar -->
        <div class="control-sidebar-bg"></div>
    </div>




 
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/tools")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("https://cdn.datatables.net/buttons/1.5.2/js/dataTables.buttons.min.js")
    @Scripts.Render("https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js")
    @Scripts.Render("https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/pdfmake.min.js")
    @Scripts.Render("https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/vfs_fonts.js")
    @Scripts.Render("https://cdn.datatables.net/buttons/1.5.2/js/buttons.html5.min.js")
    @Scripts.Render("https://cdn.datatables.net/buttons/1.5.2/js/buttons.print.min.js")
    @Scripts.Render("https://cdn.datatables.net/buttons/1.5.2/js/buttons.flash.min.js")
    @Scripts.Render("https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.15/jquery.mask.min.js")
    
    @RenderSection("scripts", required: false)
</body>
</html>
<script>
    //session end
    var urlRoot = "@Url.Content("~/PPIC")";
    var sessionTimeoutWarning = @Session.Timeout- 1;

    var sTimeout = parseInt(sessionTimeoutWarning) * 60 * 1000;
    setTimeout('SessionEnd()', sTimeout);

    function SessionEnd() {
        window.location = "../PPIC/LogOff";
    }
</script>